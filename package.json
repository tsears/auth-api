{
  "name": "auth-api",
  "version": "1.0.0",
  "description": "Basic authenticated API using Docker, Node, Restify, Passport, and Mongo",
  "main": "app/index.js",
  "scripts": {
    "start": "node app/index.js",
    "test": "istanbul cover --include-all-sources jasmine-node test",
    "dev": "node_modules/nodemon/bin/nodemon.js app/index.js",
    "container:dev": "docker-compose -f docker-compose/dev.yml up",
    "cover": "istanbul cover jasmine-node --include-all-sources --captureExceptions test/ && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "author": "Tom Sears",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^2.13.1",
    "istanbul": "^0.4.5",
    "jasmine-core": "^2.6.2",
    "jasmine-node": "^1.14.5",
    "jasmine-spec-reporter": "^4.1.0"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "client-sessions": "^0.8.0",
    "connect-flash": "^0.1.1",
    "mongoose": "^4.10.0",
    "nodemon": "^1.11.0",
    "passport-local": "^1.0.0",
    "passport-restify": "^1.0.1",
    "restify": "^4.3.0",
    "restify-router": "^0.4.2"
  }
}

{
  "name": "auth-api",
  "version": "1.0.0",
  "description": "Basic authenticated API using Docker, Node, Restify, Passport, and Mongo",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "node_modules/.bin/webpack",
    "build:watch": "node_modules/.bin/webpack --watch",
    "start": "node dist/bundle.js",
    "test": "istanbul cover --include-all-sources node_modules/.bin/babel-node test/run.js",
    "test:min": "babel-node node_modules/.bin/jasmine || true",
    "test:cont": "jasmine-node test/ --autotest --watch test/ app/ || true",
    "dev": "node_modules/nodemon/bin/nodemon.js --watch dist",
    "container:dev": "docker-compose -f docker-compose/dev.yml up",
    "cover": "node_modules/.bin/babel-node  node_modules/.bin/babel-istanbul cover --include-all-sources node_modules/.bin/jasmine && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "author": "Tom Sears",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-istanbul": "^0.12.2",
    "babel-loader": "^7.0.0",
    "babel-plugin-rewire": "^1.1.0",
    "coveralls": "^2.13.1",
    "jasmine": "^2.6.0",
    "json-loader": "^0.5.4",
    "webpack": "^2.6.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "connect-flash": "^0.1.1",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "mongoose": "^4.10.0",
    "nodemon": "^1.11.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "query-parser": "0.0.1"
  }
}
